{
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "mba_job_hunter",
    "username": "user",
    "password": "password"
  },
  "scraping": {
    "enabled_scrapers": ["indeed", "linkedin", "levelfyi"],
    "scrape_interval_hours": 24,
    "max_pages_per_scraper": 10,
    "request_delay_seconds": 2
  },
  "ai_analysis": {
    "provider": "openai",
    "model": "gpt-4",
    "max_tokens": 1000,
    "temperature": 0.7
  },
  "job_matching": {
    "similarity_threshold": 0.8,
    "weight_salary": 0.3,
    "weight_location": 0.2,
    "weight_skills": 0.4,
    "weight_experience": 0.1
  },
  "notifications": {
    "enabled": true,
    "email_alerts": true,
    "slack_webhook": false,
    "discord_webhook": false
  },
  "export": {
    "formats": ["json", "csv", "xlsx"],
    "include_analysis": true,
    "max_export_size": 1000
  }
}