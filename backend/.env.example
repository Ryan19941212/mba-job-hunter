# Application Configuration
APP_NAME=MBA Job Hunter
VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production-32-chars-min
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/mba_job_hunter
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_EXPIRE_SECONDS=3600

# AI API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# External Services
NOTION_API_KEY=your-notion-api-key-here
NOTION_DATABASE_ID=your-notion-database-id-here
INDEED_API_KEY=your-indeed-api-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Scraping Configuration
ENABLE_BACKGROUND_SCRAPING=true
SCRAPE_INTERVAL_HOURS=24
MAX_PAGES_PER_SCRAPER=10
REQUEST_DELAY_SECONDS=2.0
MAX_CONCURRENT_REQUESTS=10

# Job Matching Configuration
ENABLE_AUTO_MATCHING=true
SIMILARITY_THRESHOLD=0.8

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# LinkedIn Credentials (for scraping - use with caution)
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password

# Optional Webhook URL
WEBHOOK_URL=https://your-webhook-url.com/notifications

# Development/Testing
TESTING=false